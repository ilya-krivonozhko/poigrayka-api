  "components": {
    "schemas": {
      "Category": {
        "type": "object",
        "required": [
          "id",
          "title",
          "created_at",
          "updated_at"
        ],
        "properties": {
          "id": {
            "type": "integer"
          },
          "title": {
            "type": "string",
            "maxLength": 50
          },
          "created_at": {
            "type": "string",
            "format": "date-time"
          },
          "updated_at": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "CategoryInput": {
        "type": "object",
        "required": [
          "title"
        ],
        "properties": {
          "title": {
            "type": "string",
            "maxLength": 50
          }
        }
      },
      "Product": {
        "type": "object",
        "required": [
          "id",
          "title",
          "stock",
          "description",
          "short_description",
          "rules",
          "contents",
          "price",
          "min_players",
          "max_players",
          "age_rating",
          "play_time",
          "category_id",
          "created_at",
          "updated_at"
        ],
        "properties": {
          "id": {
            "type": "integer"
          },
          "title": {
            "type": "string",
            "minLength": 2,
            "maxLength": 80
          },
          "stock": {
            "type": "integer",
            "minimum": 0
          },
          "description": {
            "type": "string",
            "minLength": 4
          },
          "short_description": {
            "type": "string",
            "minLength": 4
          },
          "rules": {
            "type": "string",
            "minLength": 4
          },
          "contents": {
            "type": "string",
            "minLength": 4
          },
          "price": {
            "type": "number",
            "minimum": 0,
            "maximum": 10000000
          },
          "min_players": {
            "type": "integer",
            "minimum": 0
          },
          "max_players": {
            "type": "integer",
            "minimum": 0,
            "maximum": 100
          },
          "age_rating": {
            "type": "integer",
            "minimum": 0
          },
          "play_time": {
            "type": "integer",
            "minimum": 0
          },
          "category_id": {
            "type": "integer"
          },
          "created_at": {
            "type": "string",
            "format": "date-time"
          },
          "updated_at": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
