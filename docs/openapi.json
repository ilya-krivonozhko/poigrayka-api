        "properties": {
          "title": {
            "type": "string",
            "minLength": 2,
            "maxLength": 80
          },
          "stock": {
            "type": "integer",
            "minimum": 0
          },
          "description": {
            "type": "string",
            "minLength": 4
          },
          "short_description": {
            "type": "string",
            "minLength": 4
          },
          "rules": {
            "type": "string",
            "minLength": 4
          },
          "contents": {
            "type": "string",
            "minLength": 4
          },
          "price": {
            "type": "number",
